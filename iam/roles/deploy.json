{
    "AssumeRolePolicyDocument": {
        "Statement": [
            {
                "Action": "sts:AssumeRole",
                "Effect": "Allow",
                "Principal": {
                    "Service": [
                        "application-autoscaling.amazonaws.com",
                        "ecs-tasks.amazonaws.com",
                        "events.amazonaws.com"
                    ]
                }
            },
            {
                "Effect": "Allow",
                "Principal": {
                    "Federated": "arn:aws:iam::ACCOUNT_NUMBER_HERE:"
                }
            }
        ]
    }
}